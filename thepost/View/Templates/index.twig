{% include 'header.twig' %}
<div class="container-fluid">
    <div class="content row">
        <main class="main col-md-8">
            {% block main %}
                {% for entry in entries %}
                    <article class="element entry" id="entry-{{ entry.id }}">
                        <h2><a href="/entry/{{ entry.id }}">{{ entry.title }}</a></h2>

                        <p>{{ entry.excerpt }}</p>
                    </article>
                {% endfor %}
            {% endblock %}
        </main>
        {% block sidebar %}
            <aside class="col-md-4 hidden-sm hidden-xs">
                <article class="element widget" id="widget">
                    <h3>Blubdiblu</h3>

                    <p>fugedifagott</p>
                </article>
            </aside>
        {% endblock %}
    </div>
</div>
{% include 'footer.twig' %}